    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "del-cli": "4.0.1",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "mongodb-memory-server-core": "8.1.0",
    "prettier": "2.5.1",
